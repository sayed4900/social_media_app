<h1>Comments for a specific post</h1>

<h2>Username: <%= comments[0].user.username  %></h2>
<h2>Title: <%= comments[0].post.title  %></h2>
<h3>Content: <%= comments[0].post.caption  %></h3>
<% if (comments[0].post.image) { %>
    <div>
        <img/>
    </div>
<%}%>
<!-- display comments -->
<ul>
<% comments.forEach((comment) => { %>
    <li><a href=""> <%= comment.user.username%> </a>
        <%=  comment.comment %> </li>
    
<% }) %>
</ul>
